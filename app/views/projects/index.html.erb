<div class="row">
<div class="col-md-11">
<%= link_to("Add New Project", {:action => 'new'}, :class => 'action new', class: "btn btn-default") %><br /><br />

<div class="col-lg-12">

<div id="masonry-container" class="transitions-enabled centered clearfix masonry has-gutters">


    <% @projects.each do |project| %>


<div class = "panel panel-default">

  <div class="panel-heading">

     <h3 class="panel-title"><%= link_to(project.name + " (Details)", {:action => 'show', :id => project.id}, :class => 'action show') %></h3>

    </div>

    <div class="panel-body">



      Description:&nbsp;<%= project.description %>

      <br /><br />

      Client:&nbsp;<%= project.client.name if project.client %>

      <br /><br />

      Users in project:<br />
      <%= project.users.collect(&:lastname).join(", ") %>

      <br /><br />

      <%= link_to("Edit", {:action => 'edit', :id => project.id}, :class => 'action edit', class: "btn btn-warning") %>

      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

      <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure you want to delete this project?' }, class: "btn btn-danger"%>
      
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      
      <%= link_to("Add Task", new_project_task_path(project), class: "btn btn-info") %>

      <br /><br />

        </div>

        </div>

    <% end %>

     
        </div>
          </div>
            </div>
              </div>