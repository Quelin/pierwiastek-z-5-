<div class = "panel panel-primary">
	<div class="panel-heading">
     <h3 class="panel-title">Users</h3>
    </div>
    <div class="panel-body">
	<table class = "table table-striped table-hover datatable" summary = "Users list">
		<thead>
		<tr>
			<th>ID&nbsp;&nbsp;&nbsp;</th>
			<th>&nbsp;&nbsp;&nbsp;Name</th>
			<th>&nbsp;&nbsp;&nbsp;Last Name</th>
			<th>&nbsp;&nbsp;&nbsp;E-mail</th>
			<th>&nbsp;&nbsp;&nbsp;Role</th>
			<th>&nbsp;&nbsp;&nbsp;Actions</th>
		</tr>
		</thead>

		<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td>&nbsp;&nbsp;&nbsp;<%= user.name %></td>
			<td>&nbsp;&nbsp;&nbsp;<%= user.lastname %></td>
			<td>&nbsp;&nbsp;&nbsp;<%= user.email %></td>
			<td>&nbsp;&nbsp;&nbsp;<%= user.department %></td>
			<td class = "actions">
				<%= link_to("Details", {:action => 'show', :id => user.id}, :class => 'action show', class: "btn btn-info") %>
				<%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "btn btn-danger"%>
			</td>
		</tr>
		<% end %>
		</tbody>
	</table>
</div>
</div>