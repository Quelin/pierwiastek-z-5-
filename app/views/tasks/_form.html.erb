<div class = "form-group">
<%= form_for([@task.project, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <label class="control-label" for="name">Name</label>
      <%= f.text_field(:name, class: "form-control") %>
    <br />
    
    <label class="control-label" for="description">Description</label>
      <%= f.text_area(:description, class: "form-control") %>
    <br />
    
    <label class="control-label" for="done">Done?</label>
      &nbsp;&nbsp;&nbsp;<%= f.check_box(:done) %>
    <br /><br />

    <label class="control-label" for="start_time">Start Time</label><br />
      <%= f.text_field(:start_time, class: "form-control datepicker", :'data-date-format' => "YYYY-MM-DD HH:mm" ) %>
    <br />

    <label class="control-label" for="end_time">End Time</label><br />
      <%= f.text_field(:end_time, class: "form-control datepicker", :'data-date-format' => "YYYY-MM-DD HH:mm") %>
    <br />

    <%= f.label(:user_id, "User") %><br />
    <%= f.select(:user_id, @users.map {|u| [u.name, u.id]}, { }, { :class => "form-control"}) %>
    <br />

  <br />
  
  <div class = "form-buttons">
    <%= submit_tag("Create Task", class: "btn btn-success") %>
<% end %>


          <script type="text/javascript">
            $(function () {
                $('.datepicker').datetimepicker({

                      icons: {
                    time: "fa fa-clock-o",
                    date: "fa fa-calendar",
                    up: "fa fa-arrow-up",
                    down: "fa fa-arrow-down"
                }

                  });
            });
        </script>
        
</div>